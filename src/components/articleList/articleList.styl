@import "../../_common.styl"
@import "../../_mixins.styl"

.article-list
  width: 602px
  margin-right: 42px
  float: left

.article
  @extend .box

  margin-top: 42px
  &:first-child
    margin-top: 0

  background-color: #ebebd1

  padding: 10px 16px 45px 18px

  min-height: 135px

  &__header
    clearfix()
    margin-bottom: 10px

  &__title
    float: left

  &__date
    float: right

  &__title, &__date
    font-family: Arial, Helvetica, sans-serif;
    font-size: 25px

    text-transform: uppercase

  &__content
      font-size: 12px
